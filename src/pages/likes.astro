---
import Layout from "../layouts/Layout.astro";

import {
	faJs,
	faNodeJs,
	faPhp,
	faSass,
	faReact,
	faLaravel,
	faVuejs,
	faAngular,
	faGithub,
	faGit,
	faGitlab,
	faDocker,
	faUbuntu,
	faApple,
} from "@fortawesome/free-brands-svg-icons";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import Skill from "../components/Skill.astro";
---

<Layout title="Things I like to work with">
	<h1>Things I like to work with</h1>
	<p class="my-3">
		While I code I like to use a combination of several languages and frameworks. These items are the ones that I use
		the most at the moment. Ordered by preference.
	</p>
	<div>
		<div class="skills">
			<div class="category">
				<div class="category-name"><span>Languages</span></div>
				<Skill>
					<svg slot="icon" viewBox="0 0 128 128">
						<path fill="#000" d="M22.67 47h99.67v73.67H22.67z"></path>
						<path
							data-name="original"
							fill="white"
							d="M1.5 63.91v62.5h125v-125H1.5zm100.73-5a15.56 15.56 0 017.82 4.5 20.58 20.58 0 013 4c0 .16-5.4 3.81-8.69 5.85-.12.08-.6-.44-1.13-1.23a7.09 7.09 0 00-5.87-3.53c-3.79-.26-6.23 1.73-6.21 5a4.58 4.58 0 00.54 2.34c.83 1.73 2.38 2.76 7.24 4.86 8.95 3.85 12.78 6.39 15.16 10 2.66 4 3.25 10.46 1.45 15.24-2 5.2-6.9 8.73-13.83 9.9a38.32 38.32 0 01-9.52-.1 23 23 0 01-12.72-6.63c-1.15-1.27-3.39-4.58-3.25-4.82a9.34 9.34 0 011.15-.73L82 101l3.59-2.08.75 1.11a16.78 16.78 0 004.74 4.54c4 2.1 9.46 1.81 12.16-.62a5.43 5.43 0 00.69-6.92c-1-1.39-3-2.56-8.59-5-6.45-2.78-9.23-4.5-11.77-7.24a16.48 16.48 0 01-3.43-6.25 25 25 0 01-.22-8c1.33-6.23 6-10.58 12.82-11.87a31.66 31.66 0 019.49.26zm-29.34 5.24v5.12H56.66v46.23H45.15V69.26H28.88v-5a49.19 49.19 0 01.12-5.17C29.08 59 39 59 51 59h21.83z">
						</path>
					</svg>
					 TypeScript
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faJs} />
					 JavaScript (ES6+)
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faNodeJs} />
					 NodeJS
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faPhp} />
					 PHP
				</Skill>
				<Skill icon="postgresql-plain">SQL</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faSass} />
					 Sass
				</Skill>
				<Skill icon="go-plain">Go</Skill>
			</div>
			<div class="category">
				<div class="category-name"><span>Frameworks &amp; libraries</span></div>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faReact} />
					 React
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faLaravel} />
					 Laravel
				</Skill>
				<Skill icon="react-plain">
					 Expo + React Native
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faVuejs} />
					 Vue
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faAngular} />
					 Angular
				</Skill>
			</div>
			<div class="category">
				<div class="category-name"><span>Tools</span></div>

				<Skill icon="bash-plain">zsh / bash</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faGit} />
					 git
				</Skill>
				<Skill icon="webpack-plain">webpack</Skill>
				<Skill icon="vite-plain">Vite</Skill>
				<Skill icon="redis-plain">Redis</Skill>
				<Skill icon="grafana-plain">grafana</Skill>
				<Skill icon="prometheus-original">Prometheus</Skill>
			</div>
			<div class="category">
				<div class="category-name"><span>Operating Systems</span></div>

				<Skill icon="debian-plain">Debian</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faUbuntu} />
					 Ubuntu
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faApple} />
					 MacOS
				</Skill>
			</div>
			<div class="category">
				<div class="category-name"><span>DevOps</span></div>
				<Skill icon={"kubernetes-plain"}>
					 Kubernetes
				</Skill>
				<Skill icon={"rancher-plain"}>
					 Rancher
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faDocker} />
					 Docker
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faGithub} />
					 Github (actions)
				</Skill>
				<Skill>
					<FontAwesomeIcon slot="icon" fixedWidth={true} icon={faGitlab} />
					 Gitlab (CI)
				</Skill>
			</div>
			<div class="category">
				<div class="category-name"><span>Networking</span></div>

				<Skill icon="nginx-plain">nginx</Skill>

				<Skill icon="traefik-plain">Traefik</Skill>

				<Skill icon="caddy-plain">Caddy</Skill>

				<Skill icon="apache-plain">Apache</Skill>
			</div>
		</div>
	</div>
</Layout>

<style>
	.skills {
		display: flex;
		flex-wrap: wrap;
		margin-top: 40px;
		width: 98%;
	}

	.skills .category {
		@apply border-r dark:border-gray-600 border-gray-200;
		margin-right: 30px;
		padding-bottom: 30px;
		padding-right: 30px;
		width: 250px;
	}

	.skills .category:nth-child(3n) {
		@apply lg:border-r-0;
	}

	.skills .category .category-name {
		align-items: center;
		@apply border-t border-b dark:border-gray-600 border-gray-200;
		display: flex;
		font-size: 1.3em;
		height: 70px;
		justify-content: center;
		margin-bottom: 20px;
		text-align: center;
	}

	.skills .category a {
		@apply underline-offset-4;
	}
</style>
